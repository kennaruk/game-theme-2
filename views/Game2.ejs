  <script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/2.4.1/core.js"></script>
  <script type="text/javascript"> 
  $(function () {

    $('#ready-btn').click(function() {
      var key = $('#inlineFormInputGroup').val();

      $.ajax({
          url: '/login',
          type:'POST',
          data: {key : key},
          success: (success) => {
             console.log("status :"+success.status);
              if(success.success){
                if(success.status){
                  swal("สวัสดี "+success.nickname+"!", "ยินดีต้อนรับสู่คราเคน ", "success").then(() => {
                    window.location.href = '/image' ;  
                  });
                }else{
                  swal("สวัสดี "+success.nickname+"!", "ยินดีต้อนรับสู่คราเคน ", "success").then(() => {
                    window.location.href = '/question' ;                        
                  });
                }
              }else{
                swal("แย่จัง!!!", "ตัวตนของเจ้าไม่ผ่าน จงระบุใหม่!", "error");
              }
          }
      });
    });

  });
</script>
